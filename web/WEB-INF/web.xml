<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>Servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrivateServlet</servlet-name>
        <servlet-class>Servlets.PrivateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PrivateServlet</servlet-name>
        <url-pattern>/private</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Servlets.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginCookieFilter</filter-name>
        <filter-class>Filters.LoginCookieFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginCookieFilter</filter-name>
        <servlet-name>PrivateServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>UnLoginCookieFilter</filter-name>
        <filter-class>Filters.UnLoginCookieFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UnLoginCookieFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-name>RegistrationServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>Filters.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>PrivateServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>UnLoginFilter</filter-name>
        <filter-class>Filters.UnLoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UnLoginFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-name>RegistrationServlet</servlet-name>
    </filter-mapping>
</web-app>